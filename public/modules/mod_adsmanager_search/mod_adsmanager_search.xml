<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5" method="upgrade">
	<name>mod_adsmanager_search</name>
	<author>Thomas Papin</author>
	<creationDate>September 2012</creationDate>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>webmaster@joomprod.com</authorEmail>
	<authorUrl>www.joomprod.com</authorUrl>
	<version>2.7.0 Stable</version>
	<description>AdsManager Search Module</description>
	<files>
		<filename module="mod_adsmanager_search">mod_adsmanager_search.php</filename>
		<filename>mod_adsmanager_search.xml</filename>
		<filename>index.html</filename>
        <filename>tmpl/index.html</filename>
        <filename>tmpl/default.php</filename>
	</files>
	<languages folder="language">
        <language tag="en-GB">en-GB.mod_adsmanager_search.ini</language>
        <language tag="en-GB">en-GB.mod_adsmanager_search.sys.ini</language>
        <language tag="fr-FR">fr-FR.mod_adsmanager_search.ini</language>
        <language tag="fr-FR">fr-FR.mod_adsmanager_search.sys.ini</language>
        <language tag="fa-IR">fr-FR.mod_adsmanager_search.ini</language>
        <language tag="fa-IR">fr-FR.mod_adsmanager_search.sys.ini</language>
        <language tag="hu-HU">hu-HU.mod_adsmanager_search.ini</language>
        <language tag="hu-HU">hu-HU.mod_adsmanager_search.sys.ini</language>
        <language tag="sl-SI">sl-SI.mod_adsmanager_search.ini</language>
        <language tag="sl-SI">sl-SI.mod_adsmanager_search.sys.ini</language>
        <language tag="ro-RO">ro-RO.mod_adsmanager_search.ini</language>
        <language tag="ro-RO">ro-RO.mod_adsmanager_search.sys.ini</language>
    </languages>
	<params>
		<param name="default_itemid" type="text" default="" size="4" label="Itemid" description="Specific Itemid. If empty the current itemif will be used" />
		<param name="advanced_search" type="radio" default="1" label="Advanced Search" description="Display link to Advanced Search">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="A suffix to be applied to the css class of the module (table.moduletable), this allows individual module styling" />
		<param name="search_by_cat" type="radio" default="1" label="Search by Cat" description="Activate or Not the category search select box">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="field1" type="text" default="" label="Field 1" description="Display a search field for this adsmanager field" />
		<param name="field2" type="text" default="" label="Field 2" description="Display a search field for this adsmanager field" />
		<param name="field3" type="text" default="" label="Field 3" description="Display a search field for this adsmanager field" />
		<param name="field4" type="text" default="" label="Field 4" description="Display a search field for this adsmanager field" />
		<param name="field5" type="text" default="" label="Field 5" description="Display a search field for this adsmanager field" />
		<param name="type" type="radio" default="table" label="Display Table" description="Use Div or Table">
			<option value="div">Div</option>
			<option value="table">Table</option>
			<option value="horizontal">Horizontal</option>
		</param>
	</params>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="default_itemid" type="text" default="" size="4" label="MOD_ADSMANAGER_SEARCH_ITEMID" description="MOD_ADSMANAGER_SEARCH_ITEMID_DESC" />
				<field name="advanced_search" type="radio" default="1" label="MOD_ADSMANAGER_SEARCH_ADVANCED_SEARCH" description="MOD_ADSMANAGER_SEARCH_ADVANCED_SEARCH_DESC">
					<option value="0">MOD_ADSMANAGER_SEARCH_NO</option>
					<option value="1">MOD_ADSMANAGER_SEARCH_YES</option>
				</field>
				<field name="search_by_cat" type="radio" default="1" label="MOD_ADSMANAGER_SEARCH_CAT" description="MOD_ADSMANAGER_SEARCH_CAT_DESC">
					<option value="0">MOD_ADSMANAGER_SEARCH_NO</option>
					<option value="1">MOD_ADSMANAGER_SEARCH_YES</option>
				</field>
				<field name="field1" type="text" default="" label="MOD_ADSMANAGER_SEARCH_FIELD1" description="MOD_ADSMANAGER_SEARCH_FIELD_DESC" />
				<field name="field2" type="text" default="" label="MOD_ADSMANAGER_SEARCH_FIELD2" description="Display a search field for this adsmanager field" />
				<field name="field3" type="text" default="" label="MOD_ADSMANAGER_SEARCH_FIELD3" description="Display a search field for this adsmanager field" />
				<field name="field4" type="text" default="" label="MOD_ADSMANAGER_SEARCH_FIELD4" description="Display a search field for this adsmanager field" />
				<field name="field5" type="text" default="" label="MOD_ADSMANAGER_SEARCH_FIELD5" description="Display a search field for this adsmanager field" />	
				<field name="type" type="radio" default="table" label="MOD_ADSMANAGER_SEARCH_DISPLAY_TABLE" description="MOD_ADSMANAGER_SEARCH_DISPLAY_TABLE_DESC">
					<option value="div">Div</option>
					<option value="table">Table</option>
					<option value="horizontal">Horizontal</option>
				</field>
			</fieldset>
			<fieldset name="advanced">		
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" 
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
			</fieldset>
		</fields>
	</config>
</install>